<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1C232D"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="定时关闭"
        android:id="@+id/pop_timer_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/d32_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pop_timer_title"
        app:layout_constraintBottom_toBottomOf="@id/pop_timer_title"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:theme="@style/BlackBackgroundCheckBoxTheme"
        android:text="播完整首歌后关闭"/>

    <LinearLayout
        android:id="@+id/pop_timer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/pop_timer_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/d12_size"
        android:paddingVertical="8dp"
        android:background="@drawable/bg_pop_timer_layout"
        android:layout_marginVertical="84dp">

        <Button
            android:id="@+id/pop_timer_button1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/pop_player_timer_item"
            android:text="关闭"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/pop_timer_button2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="10"
            android:background="@null"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/pop_timer_button3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="20"
            android:background="@null"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/pop_timer_button4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="30"
            android:background="@null"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <Button

            android:id="@+id/pop_timer_button5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/white"
            android:text="60"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/pop_timer_button6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/white"
            android:text="90"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>