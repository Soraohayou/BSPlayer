<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d48_size"
    android:minHeight="@dimen/d48_size">

    <LinearLayout
        android:id="@+id/play_shuffle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_shuffle_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:src="@mipmap/play_all" />

        <TextView
            android:id="@+id/tv_shuffle_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d8_size"
            tools:text="@string/play_random" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/main_play_list"
            android:layout_width="@dimen/d24_size"
            android:layout_height="@dimen/d24_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/d8_size"
            android:src="@drawable/img_main_playlist" />

    </LinearLayout>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="?attr/divider_color" />

</RelativeLayout>